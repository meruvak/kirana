{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
		<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		{% if success %}
		<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
		{% endif %}
		<div class="panel panel-default card">
			<div class="panel-heading">
				<h3 class="panel-title card-header"><i class="fa fa-list"></i> {{ text_bulk_product_upload }}</h3>
			</div>
			
			<div class="panel-body card-body">
			<div class="col-sm-12" >
				<div class="well card mb-3 p-3">
					<div class="row">
						<div class="col-sm-12 text-left">
							<div>
								<div>
									<label class="control-label col-form-label ptsc-bulkshipp-nofontweig" for="input-name">{{ text_maxtime_info }}</label><label class="ptsc-commission-fontbold">&nbsp;{{ max_time }}&nbsp;{{ text_seconds }}</label>
									
								</div>
								<div>
									
									<label class="control-label col-form-label ptsc-bulkshipp-nofontweig" for="input-name">{{ text_file_size_info }} </label><label class="ptsc-commission-fontbold">&nbsp;{{ memory_limit }}</label>
									
								</div>
								<div>
									
									<label class="ptsc-commission-fontbold"><a href="{{ admin_template}}">{{ admin_bulk_product_upload_sheet }}</a></label>
									
								</div>
							</div>
							
						</div>
					</div>
				</div>  
				</div>  
				
					<div class="col-sm-12">
					<div class="col-sm-12 well">
						<h4 class="panel-title ptsc-bulkupload-padd"> <span class="pts-title">{{ text_bulk_product_export }}</span></h4>
						<div class="row">
							<form action=""  method="post" enctype="multipart/form-data" id="form-export-product">
							
							<div class="col-sm-6 text-left">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_seller }}</label>
									<select name="seller_id" id="input-status" class="form-control">
										
										<option value="" >{{ text_none }} </option>
										{% for seller_id in seller_id %}
										
										<option value="{{ seller_id.seller_id  }}" >{{ seller_id.store_name }} ({{ seller_id.seller_id }})</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							
							<div class="col-sm-6 text-left">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_language }}</label>
									<select name="language" id="input-status" class="form-control">
										{% for lang in lang %} 
										<option value="{{ lang.language_id }}" {% if lang.default %} selected  {% endif %} >{{ lang.name }}</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							
							
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<input type="submit" value="{{ text_export }}" class="btn btn-primary" class="button_add ptsc-bulkupload-btnadd" form="form-export-product" formaction="{{ export }}" >
									
								</div>
							</div>
							</form>
						</div>
					</div>
					</div>
				<div class="col">
					<div class="col-sm-6">
					<div class="well">
						<h4 class="panel-title ptsc-bulkupload-padd"> <span class="pts-title">{{ text_bulk_product_import_add }}</span></h4>
						<div class="row">
							<form action="" method="post" enctype="multipart/form-data" id="form-add-product">
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_seller }}</label>
									<select name="seller_id" id="input-status" class="form-control">
										
										<option value="" >{{ text_none }} </option>
										{% for seller_id in seller_id %}
										
										<option value="{{ seller_id.seller_id  }}" >{{ seller_id.store_name }} ({{ seller_id.seller_id }})</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_language }}</label>
									<select name="language" id="input-status" class="form-control">
										{% for lang in lang %}
										<option value="{{ lang.language_id }}" {% if lang.default %} selected  {% endif %} >{{ lang.name }}</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<input type="file" class="ptsc-bulkupload-impheight"  name="import">
								</div>
							</div>
							<div class="col-sm-12">
									<button type="submit" name="submit" value="{{ button_upload }}" class="btn btn-primary" class="button_add ptsc-upgrdatabas-padd" form="form-add-product" formaction="{{ add_product }}" >{{ text_import }}</button>
						</div>
					</form>				
						</div>
					</div>
					</div>
		<div class="col-sm-6">
			<div class="well">
						<h4 class="panel-title ptsc-bulkupload-padd"> <span class="pts-title">{{ text_bulk_product_import_update }}</span></h4>
						<div class="row">
							<form action="" method="post" enctype="multipart/form-data" id="form-update-product">
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_seller }}</label>
									<select name="seller_id" id="input-status" class="form-control">
										
										<option value="" >{{ text_none }} </option>
										{% for seller_id in seller_id %}
										
										<option value="{{ seller_id.seller_id  }}" >{{ seller_id.store_name }} ({{ seller_id.seller_id }})</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<label class="control-label col-form-label" for="input-name" >{{ entry_select_language }}</label>
									<select name="language" id="input-status" class="form-control">
										{% for lang in lang %}
										<option value="{{ lang.language_id }}" {% if lang.default %} selected  {% endif %} >{{ lang.name }}</option>
										{% endfor %}
									</select>
									
								</div>
							</div>
							
							
							<div class="col-sm-12 text-left">
								<div class="form-group">
									<input type="file" class="ptsc-bulkupload-impheight"  name="import">
									
								</div>
							</div>
							
							<div class="col-sm-12" >
									<button type="submit" name="submit" value="{{ button_upload }}" class="btn btn-primary" class="button_add ptsc-upgrdatabas-padd" form="form-update-product" formaction="{{ update_product }}">{{ text_update }}</button>
							</div>
							
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-exclamation-triangle"></i>{{ text_bulk_product_status_heading }}</h3>
      </div>
      <div class="panel-body">
        <textarea wrap="off" rows="15" readonly class="form-control">{% for status_msg in status_msgs %}
{{ status_msg.msg }}
{% endfor %}</textarea>
      </div>
	</div>
</div>
	
	{{ footer }} 
	<script type="text/javascript">
		function checkbox()
		{
			var checkboxselect=document.getElementById("check").checked;
			if(checkboxselect)
			{
				document.getElementById("check").checked=false;
				} else {
				document.getElementById("check").checked=true;	
			}
		}
	</script>